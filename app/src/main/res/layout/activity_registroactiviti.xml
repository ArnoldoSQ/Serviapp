<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registroactiviti"
    android:orientation="vertical"
    android:layout_margin="16dp">
    <ImageView

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrate A ServiApp"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="8dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Correo :"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="3"/>

        <EditText
            android:id="@+id/registro_correo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:inputType="textEmailAddress"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" Usuario :"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="3"/>

        <EditText
            android:id="@+id/registro_usuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" Contrase単a :"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="5"/>

        <EditText
            android:id="@+id/registro_contrase単a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" re-Contrase単a :"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="5"/>

        <EditText
            android:id="@+id/registro_re_contrase単a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" Domicilio :"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="3"/>

        <EditText
            android:id="@+id/registro_domicilio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" Telefono :"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_weight="3"/>

        <EditText
            android:id="@+id/registro_telefono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:inputType="phone"/>
    </LinearLayout>
    <Button
        android:id="@+id/registro_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:backgroundTint="@color/black"/>





</LinearLayout>